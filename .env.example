# Pinterest Template Generator - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application environment (development, staging, production)
ENVIRONMENT=production

# Debug mode (True for development, False for production)
DEBUG=False

# Application domain
DOMAIN=pinmaker.kraftysprouts.com

# Application URL (used for CORS and redirects)
APP_URL=https://pinmaker.kraftysprouts.com

# Secret key for session management (generate a secure random string)
SECRET_KEY=your-super-secret-key-change-this-in-production

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server host and port
HOST=127.0.0.1
PORT=8000

# Number of worker processes (recommended: 2 * CPU cores + 1)
WORKERS=4

# Worker timeout in seconds
WORKER_TIMEOUT=120

# Maximum request size (in bytes) - 50MB default
MAX_REQUEST_SIZE=52428800

# =============================================================================
# FILE STORAGE SETTINGS
# =============================================================================

# Maximum file upload size (in bytes) - 10MB default
MAX_UPLOAD_SIZE=10485760

# Allowed image file extensions (comma-separated)
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,gif

# File cleanup settings (in hours)
UPLOAD_CLEANUP_HOURS=24
PREVIEW_CLEANUP_HOURS=168
TEMP_CLEANUP_HOURS=1

# Storage paths (relative to app directory)
UPLOADS_DIR=uploads
TEMPLATES_DIR=templates
PREVIEWS_DIR=previews
FONTS_DIR=fonts
LOGS_DIR=logs

# =============================================================================
# AI/ML SETTINGS
# =============================================================================

# AI model settings
AI_MODEL_CACHE_SIZE=1000
AI_BATCH_SIZE=1
AI_CONFIDENCE_THRESHOLD=0.7

# Computer vision settings
CV_MAX_IMAGE_SIZE=2048
CV_MIN_TEXT_CONFIDENCE=0.5
CV_COLOR_CLUSTERS=8

# Text detection settings
TEXT_DETECTION_LANGUAGES=en
TEXT_MIN_SIZE=10
TEXT_MAX_SIZE=200

# Layout analysis settings
LAYOUT_GRID_SIZE=20
LAYOUT_MIN_ELEMENT_SIZE=50
LAYOUT_MERGE_THRESHOLD=10

# =============================================================================
# STOCK PHOTO SERVICES
# =============================================================================

# Unsplash API (https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
UNSPLASH_SECRET_KEY=your-unsplash-secret-key

# Pexels API (https://www.pexels.com/api/)
PEXELS_API_KEY=your-pexels-api-key

# Pixabay API (https://pixabay.com/api/docs/)
PIXABAY_API_KEY=your-pixabay-api-key

# Stock photo settings
STOCK_PHOTO_CACHE_HOURS=24
STOCK_PHOTO_MAX_RESULTS=20
STOCK_PHOTO_DEFAULT_SIZE=regular

# =============================================================================
# FONT SETTINGS
# =============================================================================

# Google Fonts API key (optional, for enhanced font features)
GOOGLE_FONTS_API_KEY=your-google-fonts-api-key

# Font processing settings
FONT_MAX_SIZE=5242880  # 5MB
FONT_ALLOWED_FORMATS=ttf,otf,woff,woff2
FONT_CACHE_SIZE=100

# Default fonts (comma-separated)
DEFAULT_FONTS=Arial,Helvetica,Georgia,Times New Roman,Verdana,Roboto,Open Sans

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS settings
CORS_ORIGINS=https://pinmaker.kraftysprouts.com,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# API key for admin endpoints (optional)
ADMIN_API_KEY=your-admin-api-key

# Trusted hosts (comma-separated)
TRUSTED_HOSTS=pinmaker.kraftysprouts.com,localhost,127.0.0.1

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file settings
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Enable/disable specific loggers
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_PERFORMANCE=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Health check settings
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# Performance monitoring
MONITOR_RESPONSE_TIME=true
MONITOR_MEMORY_USAGE=true
MONITOR_DISK_USAGE=true

# Alert settings
ALERT_EMAIL=admin@kraftysprouts.com
ALERT_SLACK_WEBHOOK=your-slack-webhook-url

# Metrics collection
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=30

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Cache backend (memory, redis, file)
CACHE_BACKEND=memory

# Redis settings (if using Redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache timeouts (in seconds)
CACHE_DEFAULT_TIMEOUT=3600
CACHE_TEMPLATE_TIMEOUT=86400
CACHE_FONT_TIMEOUT=604800

# =============================================================================
# EMAIL SETTINGS (for notifications)
# =============================================================================

# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email settings
EMAIL_FROM=noreply@kraftysprouts.com
EMAIL_FROM_NAME=Pinterest Template Generator

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Remote backup settings
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings (only used when DEBUG=True)
DEV_RELOAD=true
DEV_MOCK_AI=false
DEV_MOCK_STOCK_PHOTOS=false
DEV_SKIP_AUTH=false

# Testing settings
TEST_DATABASE_URL=sqlite:///test.db
TEST_SKIP_SLOW=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_STOCK_PHOTOS=true
FEATURE_CUSTOM_FONTS=true
FEATURE_BATCH_PROCESSING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_API_RATE_LIMITING=true

# Experimental features
EXPERIMENTAL_AI_MODELS=false
EXPERIMENTAL_REAL_TIME_PREVIEW=true
EXPERIMENTAL_COLLABORATIVE_EDITING=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Analytics (Google Analytics, etc.)
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Error tracking (Sentry, etc.)
SENTRY_DSN=your-sentry-dsn

# CDN settings
CDN_URL=https://cdn.kraftysprouts.com
CDN_ENABLED=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Compression settings
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_MIN_SIZE=1024

# Static file settings
STATIC_FILE_CACHE_TIMEOUT=31536000  # 1 year
STATIC_FILE_COMPRESSION=true

# Database connection pool (if using database)
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================

# Add your custom environment variables here
# CUSTOM_SETTING=value

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords and API keys
# 3. Regularly rotate secrets and API keys
# 4. Use environment-specific values for different deployments
# 5. Document any custom settings you add
# 6. Test configuration changes in staging before production
# 7. Keep this template updated when adding new settings