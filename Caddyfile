# Caddy configuration for Pinmaker API
# Automatic HTTPS with Let's Encrypt

# Global options (must be first)
{
    # Email for Let's Encrypt
    email hello@kraftysprouts.com
    
    # Use Let's Encrypt production
    acme_ca https://acme-v02.api.letsencrypt.org/directory
    
    # Enable admin API
    admin localhost:2019
    
    # Log level
    log {
        level INFO
    }
}

# API subdomain - main endpoint
pinapi.kraftysprouts.com {
    
    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # Gzip compression
    encode gzip
    
    # Upload endpoint with special handling
    handle /api/v1/upload {
        request_body {
            max_size 50MB
        }
        reverse_proxy localhost:8000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }
    
    # All other API routes
    handle {
        reverse_proxy localhost:8000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }
    
    # Logging - simplified to avoid permission issues
    log
}

# Main domain configuration removed - using Netlify CNAME
# Only API subdomain is handled by this server