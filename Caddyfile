# Caddy configuration for Pinmaker API
# Backend API server configuration

# Global email for Let's Encrypt
{
    email hello@kraftysprouts.com
}

pinapi.kraftysprouts.com {
    # Enable automatic HTTPS (email configured globally above)
    
    # Basic security headers (removed restrictive CSP to prevent 500/504 errors)
    header {
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # Enable gzip compression
    encode gzip
    
    # Rate limiting
    rate_limit {
        zone dynamic {
            key {remote_host}
            events 100
            window 1m
        }
    }
    
    # API routes - proxy to FastAPI backend
    reverse_proxy 127.0.0.1:8000 {
        # Health check
        health_uri /api/v1/health
        health_interval 30s
        health_timeout 10s
        
        # Headers for backend
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        
        # Timeouts for image processing
        transport http {
            dial_timeout 60s
            response_header_timeout 300s
        }
    }
    
    # File upload size limit
    request_body {
        max_size 50MB
    }
    
    # Logging
    log {
        output file /var/log/caddy/pinapi.log {
            roll_size 100MB
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level INFO
    }
    
    # Error handling
    handle_errors {
        @404 expression {http.error.status_code} == 404
        handle @404 {
            respond "API endpoint not found. Frontend available at https://pinmaker.netlify.app" 404 {
                content_type application/json
            }
        }
        
        @5xx expression {http.error.status_code} >= 500
        handle @5xx {
            respond "Internal server error. Please try again later." 500 {
                content_type application/json
            }
        }
    }
}



# Global options
{
    # Email for Let's Encrypt
    email admin@kraftysprouts.com
    
    # Enable admin API
    admin localhost:2019
    
    # Log level
    log {
        level INFO
    }
    
    # Security
    servers {
        protocol {
            experimental_http3
        }
    }
}